<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
</head>
<body>
    <header class="border-bottom">
        <nav class="navbar navbar-expand-sm">
            <div class="container-lg container-fluid">
                <a class="navbar-brand" asp-page="/Index">FlightOrder</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="nav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Orders/Create">New order</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Orders/Index">Orders</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link link-primary" href="https://github.com/adamijak">adamijak</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-lg">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/alpine/js/cdn.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
